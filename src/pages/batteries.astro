---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
import d from '../../content/pages/batteries.json';
---

<Layout title={d.seoTitle} description={d.seoDescription}>
  <Header />

  <!-- Hero -->
  <section class="hero page-hero" style="margin-top: 102px;">
    <div class="container">
      <div class="hero-content">
        <span class="hero-badge">{d.heroBadge}</span>
        <h1>{d.heroTitle} <span class="highlight">{d.heroHighlight}</span> Sales & Service</h1>
        <p>{d.heroDescription}</p>
        <div class="hero-buttons">
          <a href={d.heroCta1Link} class="btn btn-primary">{d.heroCta1Text}</a>
          <a href={d.heroCta2Link} class="btn btn-outline">{d.heroCta2Text}</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Lithium Section -->
  <section class="section">
    <div class="container">
      <div class="section-header section-header--center">
        <h2 class="section-title section-title--center">{d.lithiumHeading}</h2>
        <p class="section-subtitle">{d.lithiumSubtitle}</p>
      </div>
      <div class="services-grid">
        {d.lithiumCards?.map((card: any) => (
          <div class="service-card">
            {card.badge && <span class="service-label">{card.badge}</span>}
            <h3>{card.title}</h3>
            <p>{card.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Image break -->
  <div class="split split--reverse">
    <div class="split-image" style={`background-image: url('${d.splitImage}');`}></div>
    <div class="split-content">
      <h2>{d.splitHeading}</h2>
      <p>{d.splitText}</p>
      <a href={d.splitCtaLink} class="btn btn-primary">{d.splitCtaText}</a>
    </div>
  </div>

  <!-- Rejuvenation Section -->
  <section class="section why-section" id="rejuvenation">
    <div class="container">
      <div class="section-header section-header--center">
        <h2 class="section-title section-title--center">{d.rejuvHeading}</h2>
        <p class="section-subtitle">{d.rejuvSubtitle}</p>
      </div>
      <div class="why-grid">
        {d.rejuvCards?.map((card: any, i: number) => (
          <div class="why-card">
            <div class="why-number">{String(i + 1).padStart(2, '0')}</div>
            <div>
              <h3>{card.title}</h3>
              <p>{card.description}</p>
            </div>
          </div>
        ))}
      </div>
      <div style="text-align: center; margin-top: 3rem;">
        <a href={d.rejuvCtaLink} class="btn btn-primary">{d.rejuvCtaText}</a>
      </div>
    </div>
  </section>

  <!-- Equipment Types -->
  <section class="section">
    <div class="container">
      <div class="section-header section-header--center">
        <h2 class="section-title section-title--center">{d.equipHeading}</h2>
        <p class="section-subtitle">{d.equipSubtitle}</p>
      </div>
      <div class="services-grid">
        {d.equipCards?.map((card: any) => (
          <div class="service-card">
            <h3>{card.title}</h3>
            <p>{card.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="cta-banner">
    <div class="container">
      <div>
        <h2>{d.ctaHeading}</h2>
        <p>{d.ctaText}</p>
      </div>
      <div class="cta-actions">
        <a href="/contact" class="btn btn-primary">Contact Battery Team</a>
        <a href="tel:5594839300" class="btn btn-outline">Call Now</a>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
