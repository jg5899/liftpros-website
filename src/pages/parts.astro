---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
import d from '../../content/pages/parts.json';
---

<Layout title={d.seoTitle} description={d.seoDescription}>
  <Header />

  <section class="hero page-hero" style="margin-top: 102px;">
    <div class="container">
      <div class="hero-content">
        <span class="hero-badge">{d.heroBadge}</span>
        <h1>{d.heroTitle} <span class="highlight">{d.heroHighlight}</span></h1>
        <p>{d.heroDescription}</p>
        <div class="hero-buttons">
          <a href={d.heroCta1Link} class="btn btn-primary">{d.heroCta1Text}</a>
          <a href="tel:5594839300" class="btn btn-outline">Call Parts Desk</a>
        </div>
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <div class="section-header section-header--center">
        <h2 class="section-title section-title--center">Parts Services</h2>
      </div>
      <div class="services-grid">
        {d.featureCards?.map((card: any) => (
          <div class="service-card">
            {card.badge && <span class="service-label">{card.badge}</span>}
            <h3>{card.title}</h3>
            <p>{card.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="section why-section">
    <div class="container">
      <div class="section-header section-header--center">
        <h2 class="section-title section-title--center">Brands We Support</h2>
        <p class="section-subtitle">Parts for all major forklift and material handling brands.</p>
      </div>
      <div class="why-grid">
        <div class="why-card">
          <div class="why-number">01</div>
          <div>
            <h3>TAILIFT, Toyota, Hyster</h3>
            <p>Authorized TAILIFT dealer. Full parts availability for Toyota, Hyster, and Yale.</p>
          </div>
        </div>
        <div class="why-card">
          <div class="why-number">02</div>
          <div>
            <h3>Crown, Raymond, Clark</h3>
            <p>Electric and narrow aisle specialists. OEM and quality aftermarket options.</p>
          </div>
        </div>
        <div class="why-card">
          <div class="why-number">03</div>
          <div>
            <h3>Caterpillar, Komatsu, Nissan</h3>
            <p>IC and electric parts. Engine components, transmission, and hydraulic parts.</p>
          </div>
        </div>
        <div class="why-card">
          <div class="why-number">04</div>
          <div>
            <h3>JLG, Genie, Skyjack</h3>
            <p>Scissor lift and aerial lift parts. Hydraulic, electrical, and wear parts.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="cta-banner">
    <div class="container">
      <div>
        <h2>{d.ctaHeading}</h2>
        <p>{d.ctaText}</p>
      </div>
      <div class="cta-actions">
        <a href="/contact" class="btn btn-primary">Request Parts</a>
        <a href="tel:5594839300" class="btn btn-outline">Parts Desk</a>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
